model Client {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  age       Int
  status    Boolean
  profile   String
  goals     Goal[]
  wallet    Wallet?
  events    Event[]
  simulations Simulation[]
}

model Goal {
  id         String   @id @default(uuid())
  clientId   String
  type       String
  targetDate DateTime
  targetValue Float
  client     Client   @relation(fields: [clientId], references: [id])
}

model Wallet {
  id         String   @id @default(uuid())
  clientId   String
  totalValue Float
  allocations Json
  client     Client   @relation(fields: [clientId], references: [id])
}

model Event {
  id         String   @id @default(uuid())
  clientId   String
  type       String
  value      Float
  frequency  String
  client     Client   @relation(fields: [clientId], references: [id])
}

model Simulation {
  id         String   @id @default(uuid())
  clientId   String
  createdAt  DateTime @default(now())
  result     Json
  client     Client   @relation(fields: [clientId], references: [id])
}
